{
  "manifest_version": 3,
  "name": "Gist Text Sync",
  "version": "1.0",
  "description": "Sync text across browsers using GitHub Gist",
  "permissions": ["storage"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icons/gist-text-sync-icon.svg"
  },
  "options_page": "settings.html",
  "icons": {
    "16": "icons/gist-text-sync-icon.svg",
    "48": "icons/gist-text-sync-icon.svg",
    "128": "icons/gist-text-sync-icon.svg"
  }
}

